{
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "section": "✨ Features",
            "type": "feat"
          },
          {
            "section": "✨ Features [Breaking changes]",
            "type": "feat!"
          },
          {
            "section": "🐛 Bugfixes",
            "type": "fix"
          },
          {
            "section": "📚 Documentation",
            "type": "docs"
          },
          {
            "section": "💎 Styles",
            "type": "style"
          },
          {
            "section": "📦 Refactor",
            "type": "refactor"
          },
          {
            "section": "🚀 Performance",
            "type": "perf"
          },
          {
            "section": "🚨 Tests",
            "type": "test"
          },
          {
            "section": "🛠 Build",
            "type": "build"
          },
          {
            "section": "⚙️ Continuous Integration",
            "type": "ci"
          },
          {
            "section": "♻️ Chore",
            "type": "chore"
          },
          {
            "section": "🗑 Reverts",
            "type": "revert"
          }
        ]
      }
    }
  },
  "version": "2.0.0"
}
